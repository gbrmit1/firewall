{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
         "location": {
            "type": "string"
        },
        "resourceGroup": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "publicIpAddressName": {
            "type": "string"
        },
        "azureFirewallName": {
            "type": "string"
        },
        "firewallPolicies_fw_test_pol_name": {
            "defaultValue": "fw-test-pol",
            "type": "String"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2022-05-01",
            "name": "[concat(parameters('firewallPolicies_fw_test_pol_name'), '/DefaultApplicationRuleCollectionGroup')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/publicIpAddresses',parameters('publicIpAddressName'))]",
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/firewallPolicies', parameters('firewallPolicies_fw_test_pol_name'))]",
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/azureFirewalls',parameters('azureFirewallName'))]"
            ],
            "properties": {
                "priority": 300,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                        "action": {
                            "type": "Allow"
                        },
                        "rules": [
                            {
                                "ruleType": "ApplicationRule",
                                "name": "Allow-Google",
                                "protocols": [
                                    {
                                        "protocolType": "Http",
                                        "port": 80
                                    },
                                    {
                                        "protocolType": "Https",
                                        "port": 443
                                    }
                                ],
                                "fqdnTags": [],
                                "webCategories": [],
                                "targetFqdns": [
                                    "www.google.com"
                                ],
                                "targetUrls": [],
                                "terminateTLS": false,
                                "sourceAddresses": [
                                    "10.0.2.0/24"
                                ],
                                "destinationAddresses": [],
                                "sourceIpGroups": []
                            }
                        ],
                        "name": "App-Coll01",
                        "priority": 200
                    }
                ]
            },
            "tags": {
                "owner": "Robert Mitchell"
            }
        },
        //dnat rule here
        //
        
    ],
    "outputs": {}
}