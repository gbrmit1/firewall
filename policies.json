{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
         "vnetName": {
            "type": "string"
        },
        "publicIpAddressName": {
            "type": "string"
        },
        "azureFirewallName": {
            "type": "string"
        },
        "firewallPolicies_fw_test_pol_name": {
            "defaultValue": "fw-test-pol",
            "type": "String"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2022-05-01",
            "name": "[concat(parameters('firewallPolicies_fw_test_pol_name'), '/DefaultApplicationRuleCollectionGroup')]",
            "location": "northeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[resourceId('Microsoft.Network/publicIpAddresses',parameters('publicIpAddressName'))]",
                "[resourceId('Microsoft.Network/firewallPolicies', parameters('firewallPolicies_fw_test_pol_name'))]",
                "[resourceId('Microsoft.Network/azureFirewalls',parameters('azureFirewallName'))]"
            ],
            "properties": {
                "priority": 300,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                        "action": {
                            "type": "Allow"
                        },
                        "rules": [
                            {
                                "ruleType": "ApplicationRule",
                                "name": "Allow-Google",
                                "protocols": [
                                    {
                                        "protocolType": "Http",
                                        "port": 80
                                    },
                                    {
                                        "protocolType": "Https",
                                        "port": 443
                                    }
                                ],
                                "fqdnTags": [],
                                "webCategories": [],
                                "targetFqdns": [
                                    "www.google.com"
                                ],
                                "targetUrls": [],
                                "terminateTLS": false,
                                "sourceAddresses": [
                                    "10.0.2.0/24"
                                ],
                                "destinationAddresses": [],
                                "sourceIpGroups": []
                            }
                        ],
                        "name": "App-Coll01",
                        "priority": 200
                    }
                ]
            },
            "tags": {
                "owner": "Robert Mitchell"
            }
        },
        //dnat rule here
        //
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2022-05-01",
            "name": "[concat(parameters('firewallPolicies_fw_test_pol_name'), '/DefaultDnatRuleCollectionGroup')]",
            "location": "northeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[resourceId('Microsoft.Network/publicIpAddresses',parameters('publicIpAddressName'))]",
                "[resourceId('Microsoft.Network/firewallPolicies', parameters('firewallPolicies_fw_test_pol_name'))]",
                "[resourceId('Microsoft.Network/azureFirewalls',parameters('azureFirewallName'))]"
            ],
            "properties": {
                "priority": 100,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyNatRuleCollection",
                        "action": {
                            "type": "Dnat"
                        },
                        "rules": [
                            {
                                "ruleType": "NatRule",
                                "name": "rdp-nat",
                                "translatedAddress": "10.0.2.4",
                                "translatedPort": "3389",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                    "*"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "[reference(resourceId('Microsoft.Network/publicIpAddresses',parameters('publicIpAddressName'))).ipAddress]"
                                ],
                                "destinationPorts": [
                                    "3389"
                                ]
                            }
                        ],
                        "name": "rdp",
                        "priority": 200
                    }
                ]
            },
            "tags": {
                "owner": "Robert Mitchell"
            }
        },
        //
        // end dnat rule
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2022-05-01",
            "name": "[concat(parameters('firewallPolicies_fw_test_pol_name'), '/DefaultNetworkRuleCollectionGroup')]",
            "location": "northeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[resourceId('Microsoft.Network/publicIpAddresses',parameters('publicIpAddressName'))]",
                "[resourceId('Microsoft.Network/firewallPolicies', parameters('firewallPolicies_fw_test_pol_name'))]",
                "[resourceId('Microsoft.Network/azureFirewalls',parameters('azureFirewallName'))]"
            ],
            "properties": {
                "priority": 200,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                        "action": {
                            "type": "Allow"
                        },
                        "rules": [
                            {
                                "ruleType": "NetworkRule",
                                "name": "Allow-DNS",
                                "ipProtocols": [
                                    "UDP"
                                ],
                                "sourceAddresses": [
                                    "10.0.2.0/24"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "209.244.0.3",
                                    "209.244.0.4"
                                ],
                                "destinationIpGroups": [],
                                "destinationFqdns": [],
                                "destinationPorts": [
                                    "53"
                                ]
                            }
                        ],
                        "name": "Net-Coll01",
                        "priority": 200
                    }
                ]
            },
            "tags": {
                "owner": "Robert Mitchell"
            }
        }
    ],
    "outputs": {}
}