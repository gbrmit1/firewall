{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String"
        },
        "firewallPolicies_fw_test_pol_name": {
            "defaultValue": "fw-test-pol",
            "type": "String"
        },
        "publicIpAddressName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2022-05-01",
            "name": "[concat(parameters('firewallPolicies_fw_test_pol_name'), '/DefaultDnatRuleCollectionGroup')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "properties": {
                "priority": 100,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyNatRuleCollection",
                        "action": {
                            "type": "Dnat"
                        },
                        "rules": [
                            {
                                "ruleType": "NatRule",
                                "name": "rdp-nat",
                                "translatedAddress": "10.0.2.4",
                                "translatedPort": "3389",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                    "*"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "[reference(resourceId('/subscriptions/a7826b4d-0e55-4e8b-9b18-c53696348ed0/resourcegroups/RM-TEST-FW-RG/providers/Microsoft.Network/publicIpAddresses',parameters('publicIpAddressName'))).ipAddress]"
                                ],
                                "destinationPorts": [
                                    "3389"
                                ]
                            }
                        ],
                        "name": "rdp",
                        "priority": 200
                    }
                ]
            },
            "tags": {
                "owner": "Robert Mitchell"
            }
        },
        //
        // end dnat rule
        
    ],
    "outputs": {}
}