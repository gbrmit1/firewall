{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "value": "northeurope"
        },
        "resourceGroup": {
            "value": "RM-TEST-FW-RG"
        },
        "vnetName": {
            "type": "string"
        },
        "publicIpAddressName": {
            "type": "string"
        },
        "azureFirewallName": {
            "type": "string"
        },
        "firewallPolicies_fw_test_pol_name": {
            "defaultValue": "fw-test-pol",
            "type": "String"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2022-05-01",
            "name": "[concat(parameters('firewallPolicies_fw_test_pol_name'), '/DefaultNetworkRuleCollectionGroup')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/publicIpAddresses',parameters('publicIpAddressName'))]",
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/firewallPolicies', parameters('firewallPolicies_fw_test_pol_name'))]",
                "[resourceId(parameters('resourceGroup'), 'Microsoft.Network/azureFirewalls',parameters('azureFirewallName'))]"
            ],
            "properties": {
                "priority": 200,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                        "action": {
                            "type": "Allow"
                        },
                        "rules": [
                            {
                                "ruleType": "NetworkRule",
                                "name": "Allow-DNS",
                                "ipProtocols": [
                                    "UDP"
                                ],
                                "sourceAddresses": [
                                    "10.0.2.0/24"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "209.244.0.3",
                                    "209.244.0.4"
                                ],
                                "destinationIpGroups": [],
                                "destinationFqdns": [],
                                "destinationPorts": [
                                    "53"
                                ]
                            }
                        ],
                        "name": "Net-Coll01",
                        "priority": 200
                    }
                ]
            },
            "tags": {
                "owner": "Robert Mitchell"
            }
        }
    ],
    "outputs": {}
}