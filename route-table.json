{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "routetablename": {
            "type": "string",
        },
        "routename": {
            "type": "string",
        },
        "nexthopip": {
            "type": "string",
        },
        "vnetname": {
            "type" : "string",
        },
        "subnet2name": {
            "type" : "string",
        }
    },
    "functions": [],
    "variables": {
        "subnetforroutetable": "[resourceId('Microsoft.Network/virtualNetworks/',parameters('vnetname')'/virtualNetworks/subnets',parameters('subnet2name'))]"
    },
    "resources": [
        {
    "name": "[parameters('routetablename')]",
    "apiVersion": "2022-05-01",
    "type": "Microsoft.Network/routeTables",
    "location": "northeurope",
    "tags": {
        "owner": "Robert Mitchell"
    },
    "properties": {
        "disableBgpRoutePropagation": false,
        "routes": [
            {
                "name": "[parameters('routename')]",
                "type": "Microsoft.Network/routeTables/routes",
                "properties": {
                    "addressPrefix": "0.0.0.0/0",
                    "nextHopType": "VirtualAppliance",
                    "nextHopIpAddress": "[parameters('nexthopip')]"
                }
                
            }
        ],
        "subnets": [
            {
                "id": "[reference(resourceId(variables('subnetforroutetable'), '2020-11-01'))]"   //"Microsoft.Network/virtualNetworks/Test-FW-VN/subnets/Workload-SN"

            }
        ]
    }
}
    ],
    "outputs": {}
}